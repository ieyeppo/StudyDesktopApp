<Window x:Class="BlinkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="BtnStarBlink" Grid.Row="0" Grid.Column="0" Content="" Background="Pink" Click="BtnStarBlink_Click"/>
        <Button x:Name="BtnStopBlink" Grid.Row="0" Grid.Column="1" Content="" Background="HotPink" Click="BtnStopBlink_Click"/>
        <Label Content="Start Blinking" Grid.Row="1"/>
        <Label Content="Stop Blinking" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</Window>
